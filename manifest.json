{
  "manifest_version": 2,

  "name": "Tongji Helper",
  "description": "能绕过Chrome内核浏览器的xuanke网验证码错误无法登录Bug并且自动登录同济各种网站的Chrome插件，还有选课辅助、评教辅助等功能(⊙_⊙)~",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "icons": {
  	"48": "icon48.png",
   	"128": "icon.png" },
  
  "content_scripts": [
    {
      "matches": ["*://*.tongji.edu.cn/*"],
      "js": ["js/jquery-3.1.1.min.js", "js/tj.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "scripts": ["js/background.js"]
  },
  
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.tongji.edu.cn/"
  ]
}